table inet filter {
    chain output {
        type filter hook output priority 0;
        policy drop;

        ct state established,related accept;

        # Kafka → vm-data
        tcp dport 9092 ip daddr 172.31.34.135 accept

        # Auth → vm-auth
        tcp dport 443 ip daddr 172.31.33.47 accept
    }

    chain input {
        type filter hook input priority 0;
        policy drop;

        iif lo accept;
        ct state established,related accept;
    }
}
